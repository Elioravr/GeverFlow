  gem 'poltergeist'
end

group :deveplopment, :test do
  gem 'rspec-rails'
  gem 'haml-rails'
  gem 'shoulda-matchers'
  gem 'pry'
  gem 'spork-rails'
  gem 'fabrication'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

